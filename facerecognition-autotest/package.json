{
  "name": "facerecognition-autotest",
  "version": "1.0.0",
  "description": "Facerecognition App Automated Test",
  "main": "index.js",
  "scripts": {
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "cy:runLocal": "cross-env CYPRESS_BASE_URL=http://127.0.0.1:3000 ENV=local npm run cy:run",
    "cy:runDocker": "cross-env CYPRESS_BASE_URL=http://client:3000 ENV=docker npm run cy:run",
    "cy:openLocal": "cross-env CYPRESS_BASE_URL=http://127.0.0.1:3000 ENV=local npm run cy:open",
    "cy:runLocalHeaded": "npm run cy:runLocal -- --headed",
    "cy:runDockerHeaded": "npm run cy:runDocker -- --headed",
    "cy:runLocalHeadless": "npm run cy:runLocal -- --headless",
    "cy:runDockerHeadless": "npm run cy:runDocker -- --headless",
    "cy:recordLocalHeadless": "npm run cy:runLocalHeadless -- -- --record --key da76d19b-fb31-4f8b-8b0f-a201a713df45",
    "cy:recordLocalHeaded": "npm run cy:runLocalHeaded -- -- --record --key da76d19b-fb31-4f8b-8b0f-a201a713df45",
    "cy:mergeReport": "mochawesome-merge test/cypress/report/mochawesome-report/*.json > test/cypress/report/output.json",
    "cy:generateReport": "marge test/cypress/report/output.json --reportDir ./ --inline",
    "api:test": "cross-env TS_NODE_PROJECT='tsconfig.api.json' mocha -r ts-node/register 'test/api/**/*.ts' --reporter mochawesome  --reporter-options overwrite=false,html=false,json=true,reportDir='test/api/report/mochawesome-report'",
    "api:local": "cross-env ENV=local npm run api:test",
    "api:docker": "cross-env ENV=docker npm run api:test",
    "api:mergeReport": "mochawesome-merge test/api/report/mochawesome-report/*.json > test/api/report/output.json",
    "api:generateReport": "marge test/api/report/output.json --reportDir ./ --inline",
    "deleteReports": "node test/deleteReports.ts",
    "startLocal": "npm run deleteReports & npm run api:local & npm run api:mergeReport & npm run api:generateReport & npm run cy:runLocalHeadless & npm run cy:mergeReport & npm run cy:generateReport",
    "startDocker": "npm run deleteReports & npm run api:docker & npm run api:mergeReport & npm run api:generateReport & npm run cy:runDockerHeadless & npm run cy:mergeReport & npm run cy:generateReport"
  },
  "keywords": [],
  "author": "Farkas Viktor",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/chai": "^4.2.14",
    "@types/cypress-image-snapshot": "^3.1.1",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@types/pg": "^7.14.5",
    "@types/supertest": "^2.0.10",
    "bcrypt-nodejs": "0.0.3",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "cypress": "^5.5.0",
    "cypress-image-snapshot": "^3.1.1",
    "eslint-plugin-cypress": "^2.11.2",
    "mocha": "^8.1.1",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.2.0",
    "pg": "^8.0.3",
    "supertest": "^5.0.0"
  },
  "dependencies": {
    "debug": "^4.2.0",
    "serialize-javascript": ">=3.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
